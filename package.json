{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "prestart": "npm run build && npm run gen:docs",
    "start": "node ./dist/app.js",
    "serve": "nodemon ./dist/app.js",
    "prewatch": "rimraf dist",
    "watch": "tsc -w",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "mkdir dist/logs && touch dist/logs/access.log",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:cover": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "gen:docs": "npx jsdoc ./src/**/**/*.js -d './dist/public/docs'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UWEMAKAN/globalaccelerex.git"
  },
  "author": "Uwem Akan Nkereuwem",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/UWEMAKAN/globalaccelerex/issues"
  },
  "homepage": "https://github.com/UWEMAKAN/globalaccelerex#readme",
  "dependencies": {
    "@types/app-root-path": "1.2.4",
    "@types/body-parser": "1.19.0",
    "@types/compression": "1.7.0",
    "@types/cors": "2.8.7",
    "@types/express": "4.17.7",
    "@types/morgan": "1.9.1",
    "@types/nodemon": "1.19.0",
    "@types/response-time": "2.3.4",
    "@types/rimraf": "3.0.0",
    "app-root-path": "3.0.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.17.1",
    "jsdoc": "3.6.5",
    "knex": "2.4.0",
    "morgan": "1.10.0",
    "mysql": "2.18.1",
    "nodemon": "2.0.4",
    "pg": "8.3.0",
    "reflect-metadata": "0.1.13",
    "response-time": "2.3.2",
    "rimraf": "3.0.2",
    "typeorm": "0.2.25",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.8",
    "@types/node": "14.0.27",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "eslint": "7.6.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-sql": "1.1.1",
    "jest": "26.2.2",
    "supertest": "4.0.2",
    "ts-jest": "26.1.4",
    "typescript": "3.9.7"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node-modules/**/node_modules"
    ],
    "delay": "5000",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4500
    }
  }
}
